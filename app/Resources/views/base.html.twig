<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Community{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('img/Logo.svg') }}" />
        <link href="{{ asset('css/bootstrapAccueil.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/Accueil.css') }}" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <a class="navbar-brand" href="{{ path('accueil_index') }}">Community </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item active">
                <a class="nav-link" href="{{ path('createEvent') }}">{{ 'nav.create'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('MyEvent') }}">{{ 'nav.myEvent'|trans }} </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('MyProfil') }}">{{ 'nav.profil'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">About</a>
              </li>
            </ul>
          
          <ul class="nav navbar-right ">
            <li class="nav-item dropdown bg-light">
            <a class="nav-link  dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">langue</a>
            <div class="dropdown-menu " x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 40px, 0px); top: 0px; left: 0px;  max-width:30px;">
            <a class="dropdown-item" href="{{ path('accueil_index', {'_locale':'fr'}) }}">Fr</a>
            <a class="dropdown-item" href="{{ path('accueil_index', {'_locale':'en'}) }}">En</a>
            </div>
            </li>
          </ul>
          </div>
        </nav>



        
  
        {% block body %}
        {% endblock %}
        {% block javascripts %}
          <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
          <script src="{{ asset('js/jquery.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
