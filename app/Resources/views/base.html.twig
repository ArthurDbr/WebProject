<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Community{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('img/Logo.svg') }}" />
        <link href="{{ asset('css/'~ app.user.template ~'.css') }}" rel="stylesheet">
        <link href="{{ asset('css/Accueil.css') }}" rel="stylesheet">
        <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
        <script src="{{asset('js/jquery.min.js')}}" ></script>
        <script src="{{asset('js/bootstrap.min.js')}}" ></script>
        <script src="{{asset('js/poppers.min.js')}}" ></script>
        <script type="text/javascript" src="{{ asset('js/date.js') }}"></script>



    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <a class="navbar-brand logo" href="{{ path('accueil_index') }}">Community </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">

              <li class="nav-item">
                <a class="nav-link" href="{{ path('ajoutEvent') }}">{{ 'nav.create'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="{{ path('MyEvent') }}">{{ 'nav.myEvent'|trans }} 
                  {% if app.user.notification %}
                    <sup>1</sup>
                  {% endif %}
                </a>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="{{ path('MyProfil') }}">{{ 'nav.profil'|trans }}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link"  href="{{ path('About') }}">{{ 'nav.about'|trans }}</a>
              </li>
            </ul>
          
          <ul class="nav navbar-right ">      
            <form action="{{ path('RechercherEvenement') }}" method="POST" class="form-inline my-2 my-lg-0">
              <div class="col-sm-12">                   
              <div class="input-group">
              <input class="form-control mr-xs-2" placeholder="Search" type="text" name="description">
              <button class="btn btn-info my-2 my-sm-0" type="submit" name="search">Go</button>
              </div>
              </div>
            </form>
            <li class="nav-item bg-light">            
              <a class="nav-link" href="{{ path('fos_user_security_logout') }}">
                  {{ 'bouton.Deconnexion'|trans }}
              </a>
            </li>
            <a type="button" class="btn langueBouton" href="{{ path('accueil_index', {'_locale':'fr'}) }}">Fr</a>
            <a type="button" class="btn langueBouton" href="{{ path('accueil_index', {'_locale':'en'}) }}">En</a>
          </ul>
          </div>
        </nav>



        {{ wo_render_breadcrumbs() }}
        {% block body %}

        {% endblock %}
        {% block javascripts %}
        {% endblock %}
    </body>
    <footer>
      <div class="container ">
        <div class=" offset-md-2 row-block">
          <span class="text-muted">2018 - Developp√© par Arthur Debar, Pierre Valenza et Mamadou Boiro</span>
        </div>
      </div>
      <br>
    </footer>
</html>
