{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-4">	

		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">Type</th>
					<th scope="col">Date</th>
				</tr>
			</thead>
			{% for event in evenement %}
			<tr>
	   			<td>
	   				{% if event.idTypeEvenement == 1 %}
	   					Party
	   				{% elseif event.idTypeEvenement == 2 %}
	   					Study
	   				{% elseif event.idTypeEvenement == 3 %}
	   					Theatre
	   				{% elseif event.idTypeEvenement == 4 %}
	   					Cinema
	   				{% elseif event.idTypeEvenement == 5 %}
	   					Restaurent
	   				{% elseif event.idTypeEvenement == 6 %}
	   					Sport
	   				{% endif %}
	   			</td>
				<td> {{ event.dateEvenement }}</td>
				<td>
	   				<a href="{{ path('showEvenement', { id :  event.id }) }}"><input type="submit" value="more info" name="Info" class="btn btn-info btn-sm btn-block"></a>
	   			</td>
	    	</tr>
	   		{% endfor%}
	   	</table>

</div>

{% endblock %}

