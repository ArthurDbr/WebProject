{% extends 'base.html.twig' %}

{% block body %}
<br>
<div class="container">
<div class="align-item-center">
<div class="row justify-content-center">	
	<div class="card border-info col col-12" >
		<div class="card-header text-center"><b>{{ typeEvent[event.idTypeEvenement] }}</b></div>
		<div class="card-body">
		<table class="table table-hover">
	    	<tr>
	    		<td  >Description : </td><td> {{ event.description }}</td>
	    	</tr>
	    	<tr>
	   			<td>Lieu : </td><td> {{ event.lieu }}</td>
	   		</tr>
	    	<tr>
	   			<td>Date : </td><td> {{ event.dateEvenement }}</td>
	   		</tr>
	    	<tr>
	   			<td>Heure : </td><td> {{ event.heureEvenement }}</td>
	   		</tr>
	   		{% if app.user.id == event.idPersonne %}
	   		<tr>
	   			<td>
					<a href="{{ path('deleteEvenement', { id :  event.id }) }}"><input type="submit" value="Delete" name="delete" class="btn btn-danger btn-sm btn-block"></a>
					
				</td>
	   			<td>
	   				<a href="{{ path('modifyEvenement', { id :  event.id }) }}"><input type="submit" value="Modify" name="modify" class="btn btn-info btn-sm btn-block"></a>
	   			</td>
	   		</tr>
	   		{% endif %}
	   	</table>

		</div>
	</div>
</div>
</div>
</div>

{% endblock %}

{% block stylesheets %}
{% endblock %}